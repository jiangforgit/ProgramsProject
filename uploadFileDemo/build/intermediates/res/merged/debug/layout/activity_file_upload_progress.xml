<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/rl_file_upload_progress_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picc_bcg"
        >
        <ImageButton
	        android:id="@+id/imgbt_file_upload_progress_back"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:layout_marginLeft="10dip"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/picc_back"
	        android:background="@drawable/insurance_details_foot_bt_slector"
       />
        <TextView 
            android:id="@+id/tv_file_upload_progress_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/wite"
            android:textSize="18sp"
            android:text="@string/tv_file_upload_progress_title"
            />
        <Button 
            android:id="@+id/bt_reupload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="重传"
            
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_file_upload_progress_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl_file_upload_progress_title"
        android:orientation="vertical"
        >

        <com.vcom.uploadfile.activity.XListView
            android:id="@+id/lv_file_upload_progress_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="5dip" />
        
    </LinearLayout>
    
</RelativeLayout>
