<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip"
    android:gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/tv_file_upload_progress_listview_item_showlength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
            android:text="@string/tv_file_upload_progress_listview_item_showlength"
            />
        <TextView 
            android:id="@+id/tv_file_upload_progress_listview_item_showprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="@string/tv_file_upload_progress_listview_item_showprogress"
            />
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ProgressBar 
            android:id="@+id/pb_file_upload_progress_listview_item_progressbar"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="10"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/tv_file_upload_progress_listview_item_filename"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tv_file_upload_progress_listview_item_filename"
            />
    </LinearLayout>
</LinearLayout>
